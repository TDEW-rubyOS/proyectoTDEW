<h1>Listado de Cursos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Formula</th>
    <th>Cantidad de PCs</th>
    <th>Examen final</th>
    <th>Proyecto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cursos.each do |curso| %>
  <tr>
    <td><%= curso.nombre %></td>
    <td><%= curso.formula %></td>
    <td><%= curso.cantpcs %></td>
    <td><%= curso.exafinal %></td>
    <td><%= curso.proyecto %></td>
    <td><%= link_to 'Ver', curso %></td>
    <td><%= link_to 'Editar', edit_curso_path(curso) %></td>
    <td><%= link_to 'Eliminar', curso, confirm: 'Estas seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

